<!DOCTYPE html>
<html>
    <head lang='en'>
        <meta charset='UTF-8'>
        <title>IBeAHero | Login</title>
        <meta name='description' content='The login page to destiny.'>
        {{template "head-links"}}
    </head>
    <body>
        {{template "upper-header"}}
        {{template "header"}}
        <div class="page-main-container">
            <div class="page-container">
                <div class="page-1200-container">
                    <h3 class="page-title">
                        Login
                    </h3>
                    {{ with .Errors.Server }}
                        <p class="error">{{ . }}</p>
                    {{ end }}
                    <form action="/login" method="POST">
                        {{ with .Errors.Uname }}
                            <p class="error">{{ . }}</p>
                        {{ end }}
                        <label for="uname" class="form-label">Username</label>
                        {{ if .Uname }}
                        <input type="text" name="uname" id="uname" class="form-item" value="{{ .Uname }}"/>
                        {{ else }}
                        <input type="text" name="uname" id="uname" class="form-item" value=""/>
                        {{ end }}
                        {{ with .Errors.Password }}
                            <p class="error">{{ . }}</p>
                        {{ end }}
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-item" value=""/>
                        <input type="submit" name="submit-login" id="edit-submit" value="Login"/>
                        <input type="submit" name="submit-login" id="edit-submit" value="Login With Facebook"/>
                    </form>
                    <div class="login-links">
                        <a href="/register" class="plain-links">Register</a> | <a href="/forgot/password" class="plain-links">Forgot Password</a>
                    </div>
                </div>
            </div>
        </div>
        
        {{template "footer"}}
    </body>
</html>