<!DOCTYPE html>
<html>
    <head lang='en'>
        <meta charset='UTF-8'>
        <title>Comment Manager</title>
        <meta name='description' content='Manages the comments left by users.'>
        {{template "head-section"}}
    </head>
    <body>
        {{template "upper-header" .}}
        {{template "header" .}}
        <div class="page-main-container">
            <div class="page-1200-container">
                <div class="sidebar">
                    {{template "sidebar-menu" .}}
                </div>
                <div class="content">
                    <h1 class="page-title">
                        Comment Manager
                    </h1>
                    <div class="email-wrapper">
                        {{template "email-body"}}
                    </div>
                </div>
            </div>
        </div>
        
        {{template "footer" .}}
    </body>
</html>